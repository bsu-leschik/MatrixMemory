<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:MatrixMemory.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="MatrixMemory.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="MatrixMemory">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>
    
    
    <StackLayout>
        <StackPanel Spacing="20" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="50" IsVisible="{Binding StartMenu}">
            <Button FontSize="30" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Height="100" Width="300">Start Game</Button>
            <Button FontSize="20" HorizontalAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Height="80" Width="200">Results</Button>
        </StackPanel>
        
        <StackLayout Spacing="20">
            <Button Width="100" Height="30" FontSize="20">Register</Button>
            <Button Width="80" Height="30" FontSize="20">Log in</Button>
        </StackLayout>
    </StackLayout>
    <!--TextBlock Text="{Binding Greeting}" HorizontalAlignment="Center" VerticalAlignment="Center"/!-->

</Window>
